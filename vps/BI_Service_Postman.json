            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:8000/api/query",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "query"]
            },
            "description": "Retorna todos os ativos (sem filtro)"
          },
          "response": []
        },
        {
          "name": "Filter by Ticker (NVDA)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:8000/api/query?q=symbol=NVDA",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "query"],
              "query": [
                {
                  "key": "q",
                  "value": "symbol=NVDA"
